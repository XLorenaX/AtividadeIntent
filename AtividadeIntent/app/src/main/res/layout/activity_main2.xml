<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manoel.atividadeintent.Main2Activity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Maps"
        android:id="@+id/googlemaps"
        android:onClick="forGoogleMaps"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mandar SMS bem Legal"
        android:id="@+id/SMS"
        android:onClick="forSendSMS"
        android:layout_below="@+id/googlemaps"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarme"
        android:id="@+id/Alarme"
        android:layout_below="@+id/SMS"
        android:layout_alignParentStart="true"
        android:onClick="forAlarm"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuração"
        android:id="@+id/config"
        android:layout_below="@+id/Alarme"
        android:layout_centerHorizontal="true"
        android:onClick="forConfiguracao"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busca na Web"
        android:id="@+id/web"
        android:layout_below="@+id/config"
        android:layout_centerHorizontal="true"
        android:onClick="forBusca"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Musica"
        android:id="@+id/button"
        android:layout_below="@+id/web"
        android:layout_centerHorizontal="true"
        android:onClick="forPlayMusic"/>


</RelativeLayout>
